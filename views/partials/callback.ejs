<script>
    var modalClose = document.querySelector(".closeSend");
    const submitCallback = async () => {
        let inputText = parseInt(document.querySelector("#phone-num").value);
        var regexp = /^\d{10}$/;
        if(regexp.test(inputText))
        {
            const response = await fetch("https://api.healthhighway.co.in/data/schedule-callback", {
                method  :"POST",
                headers : {
                    'Content-type' : 'application/json'
                },
                body : JSON.stringify({CONTACT : "+91"+inputText})
            });
            const decode = await response.json();
            console.log(decode);
            document.getElementById("callback-id").style.pointerEvents="none";
            infoModalOpenFunction("/images/callbackBooked.svg", "Callback Scheduled We will Contact you Shortly");
        }
        else
        {
            infoModalOpenFunction("/images/callbackBooked.svg", "Please Enter Correct 10 Digit Number");
        }
    }
    
</script>